<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#90CAF9" />
            <gradient android:angle="-90" android:startColor="#90CAF9" android:endColor="#64B5F6"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#64B5F6" />
            <solid android:color="#64B5F6"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#90CAF9" />
            <gradient android:angle="-90" android:startColor="#90CAF9" android:endColor="#90CAF9" />
        </shape>
    </item>
</selector>

